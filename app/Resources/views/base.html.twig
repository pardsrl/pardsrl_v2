<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{% if __title is defined %} {{ __title }} - {% endif %}Panel de Control{% endblock %}</title>

    <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('favicons/apple-touch-icon-57x57.png') }}">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('favicons/apple-touch-icon-60x60.png') }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('favicons/apple-touch-icon-72x72.png')}}">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('favicons/apple-touch-icon-76x76.png')}}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('favicons/apple-touch-icon-114x114.png')}}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('favicons/apple-touch-icon-120x120.png')}}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('favicons/apple-touch-icon-144x144.png')}}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('favicons/apple-touch-icon-152x152.png')}}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicons/apple-touch-icon-180x180.png')}}">
    <link rel="icon" type="image/png" href="{{ asset('favicons/favicon-32x32.png')}}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ asset('favicons/android-chrome-192x192.png')}}" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ asset('favicons/favicon-96x96.png')}}" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ asset('favicons/favicon-16x16.png')}}" sizes="16x16">
    <link rel="manifest" href="{{ asset('favicons/manifest.json')}}">
    <link rel="mask-icon" href="{{ asset('favicons/safari-pinned-tab.svg')}}" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="/mstile-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{{ asset('dashboard/bootstrap/css/bootstrap.min.css') }}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('dashboard/font-awesome/css/font-awesome.min.css') }}">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('dashboard/ionicons/css/ionicons.min.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard/plugins/select2/select2.min.css') }}">

    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('dashboard/dist/css/AdminLTE.min.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/app/app.css') }}">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ asset('dashboard/dist/css/skins/'~theme_color~'.min.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard/plugins/pace/pace.min.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard/plugins/datepicker/datepicker3.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard/plugins/datatables/dataTables.bootstrap.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard/plugins/noty/lib/noty.css') }}">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="{{ asset('dashboard/ie8/html5shiv.min.js') }}"></script>
    <script src="{{ asset('dashboard/ie8/respond.min.js') }}"></script>
    <![endif]-->
    {% block stylesheets %}{% endblock %}


    {% block header_javascript %}
        <!-- jQuery 2.1.4 -->
        <script src="{{ asset('dashboard/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
        <!-- Bootstrap 3.3.5 -->
        <script src="{{ asset('dashboard/bootstrap/js/bootstrap.min.js') }}"></script>

        <script src="{{ asset('dashboard/plugins/pace/pace.min.js') }}"></script>

    {% endblock %}
</head>


<body class="hold-transition {{ theme_color }} sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="{{ path('dashboard') }}" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>P</b>&P</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Pard</b>SRL</span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    {% set avatar = (app.user.persona.sexo == 'M') ? 'avatar5.png' : 'avatar2.png' %}

                    {#{{ render(controller('AppBundle:Mensajes:notificaciones')) }}#}

                    {#<!-- Notifications Personales Menu -->#}
                    {{ render(controller('AppBundle:Notificaciones:notificacionesPersonales')) }}

                    {#<!-- Notifications Sistema Menu -->#}
                    {{ render(controller('AppBundle:Notificaciones:notificacionesSistema')) }}

                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <img src="{{ asset('dashboard/dist/img/'~avatar) }}" class="user-image" alt="User Image">
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">{{ app.user.persona.nombreCompleto }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <img src="{{ asset('dashboard/dist/img/'~avatar) }}" class="img-circle" alt="User Image">
                                <p>
                                    {{ app.user.persona.nombreCompleto }} - {{ app.user.persona.cargo }}
                                    <small>Miembro de {{ app.user.persona.compania }}</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            {#<li class="user-body">#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Followers</a>#}
                                {#</div>#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Sales</a>#}
                                {#</div>#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Friends</a>#}
                                {#</div>#}
                            {#</li>#}
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('persona_perfil') }}" class="btn btn-default btn-flat">Mi Perfil</a>
                                </div>

                                <div class="pull-right">
                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Salir</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            {% endif %}
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ asset('dashboard/dist/img/'~avatar) }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.persona.nombreCompleto }}</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-active-green"></i> Online</a>
                </div>
            </div>
            {% endif %}

            <!-- Sidebar Menu -->
            {{ knp_menu_render('AppBundle:Builder:mainMenu', {'currentClass': 'active', 'ancestorClass':'active','template': 'AppBundle:Menu:knp_menu.html.twig'}) }}

            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {% if __title is defined %}
                <h1 class="page-header">
                    {{ __title }} {% if __descripcion_opcional is defined %}<small>{{ __descripcion_opcional | raw }}</small>{%  endif %}
                </h1>
            {% endif %}
            {#<ol class="breadcrumb">#}
                {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
                {#<li class="active">Here</li>#}
            {#</ol>#}
        </section>

        <!-- Main content -->
        <section class="content">
            {%  include 'flash_messages.html.twig' %}

            {% set _configuracion = config.vars %}

            {# {{ dump(app.session.get('oauth2_token') ) }} #}
            {#{{ dump(api) }}#}

            {% block content %}{% endblock %}

        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

    {%  include 'modals.html.twig' %}
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            {#Anything you want#}
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; {{ 'now' | date('Y') }} <a href="#">PardSRL</a>.</strong> Todos los derechos reservados.
    </footer>

</div><!-- ./wrapper -->

{% block javascripts %}

    <!-- bootstrap timepicker -->
    <script src="{{ asset('dashboard/plugins/datepicker/bootstrap-datepicker.js') }}"></script>

    <script src="{{ asset('dashboard/plugins/datepicker/locales/bootstrap-datepicker.es.js') }}"></script>

    <!-- AdminLTE App -->
    <script src="{{ asset('dashboard/dist/js/app.min.js') }}"></script>

    <!-- Moment Js -->
    <script src="{{ asset('vendor/momentjs/moment.min.js') }}"></script>
    <script src="{{ asset('vendor/momentjs/moment-timezone-with-data.min.js') }}"></script>

    <!-- Se carga socket.io en todo el site, debido a su uso principalmente en las notificaciones -->
    <script src="{{ asset('vendor/socket.io/socket.io.min.js') }}"></script>


    <script type="text/javascript">{% include 'app.js.twig' %} </script>

    <script type="text/javascript">{% include 'controllers.js.twig' %} </script>

    <script src="{{ asset('dashboard/plugins/datatables/jquery.dataTables.min.js') }}"></script>

    <script src="{{ asset('dashboard/plugins/select2/select2.min.js') }}"></script>

    <script src="{{ asset('dashboard/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>

    <script src="{{ asset('dashboard/plugins/noty/lib/noty.min.js') }}"></script>

{% endblock %}
</body>
</html>

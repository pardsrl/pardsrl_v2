  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Google Font -->
  <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic"> -->

</head>

<body>
  <div class="wrapper">
    <!-- Main content -->
    <section class="invoice">
      <!-- title row -->
      <div class="row">
        <div class="col-xs-12">
          <h2 class="page-header">
          <i class="fa fa-print"></i> Reporte Intervención - SISTEMA ESTADISTICO PARA EQUIPOS DE TORRE PARD SRL.
        </h2>
        </div>
        <!-- /.col -->
      </div>
      <!-- info row -->
      <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
          <b>Equipo:</b> {{intervencion.equipo}}<br>
          <b>Pozo:</b> {{intervencion.pozo}}<br>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <b>Tel:</b> {{intervencion.equipo.tel}}<br>
          <b>Email:</b> {{intervencion.equipo.email}}<br>
          <b>Compañía:</b> {{intervencion.equipo.compania}}
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <b>Fecha:</b> {{ "now"|date("d/m/Y H:i:s") }}<br>
          <b>Usuario:</b> {{ app.user.username }}<br>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <div class="row">
        <div class="col-xs-8">
          <p class="lead">Detalle de la intervención</p>

          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <th style="width:50%">Desde:</th>
                  <td>{{ intervencion.fecha | date("d/m/Y H:i:s") }}</td>
                </tr>
                <tr>
                  <th>Hasta:</th>
                  <td>{{ cierre is not empty ? cierre.fecha| date("d/m/Y H:i:s") : "Actualmente Interviniendo" }}</td>
                </tr>
                <tr>
                  <th>Total de intervención (Hs):</th>
                  <td>{{ estadisticaFinal.tiempoTotal }}</td>
                </tr>
                <tr>
                  <th>Promedio Caños Hora (Single):</th>
                  <td>Sacando: {{ estadisticaFinal.promCanosHoraSacaSingle }}, Bajando: {{ estadisticaFinal.promCanosHoraBajaSingle }}</td>
                </tr>
                <tr>
                  <th>Promedio Caños Hora (Doble):</th>
                  <td>Sacando: {{ estadisticaFinal.promCanosHoraSacaDoble }}, Bajando: {{ estadisticaFinal.promCanosHoraBajaDoble }}</td>
                </tr>
                <tr>
                  <th>Promedio Vb Hora (Single):</th>
                  <td>Sacando: {{ estadisticaFinal.promVbSacaSingle }}, Bajando: {{ estadisticaFinal.promVbBajaSingle }}</td>
                </tr>
                <tr>
                  <th>Promedio Vb Hora (Doble):</th>
                  <td>Sacando: {{ estadisticaFinal.promVbSacaDoble }}, Bajando: {{ estadisticaFinal.promVbBajaDoble }}</td>
                </tr>
                <tr>
                  <th>Factor de tiempo útil:</th>
                  <td>{{ estadisticaFinal.ftu }}</td>
                </tr>
                <tr>
                  <th>* Varillas Total:</th>
                  <td>Sacando: {{ estadisticaFinal.vbSaca }}, Bajando: {{ estadisticaFinal.vbBaja }}</td>
                </tr>
                <tr>
                  <th>* Tubing Total:</th>
                  <td>Sacando: {{ estadisticaFinal.tbgSaca }}, Bajando: {{ estadisticaFinal.tbgBaja }}</td>
                </tr>
                <tr>
                  <td colspan="2">(*) Referente al movimiento de Cañerías</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="newpage"></div>

      <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <p class="lead">Detalle de las series</p>

          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <th>Serie Nº</th>
                  <th>Inicio</th>
                  <th>Fin</th>
                  <th>Acción</th>
                  <th>Material</th>
                  <th>Combinación</th>
                  <th>Cantidad</th>
                  <th>Duración [min]</th>
                  <th>Promedio [hora]</th>
                </tr>
                {% if estadisticaFinal.series and estadisticaFinal.series.items is defined %}
                {% for item in estadisticaFinal.series.items  %}
                <tr>
                  <td>{{ item.nro }}</td>
                  <td>{{ item.fecha_inicio }}</td>
                  <td>{{ item.fecha_fin }}</td>
                  <td>{{ item.accion }}</td>
                  <td>{{ item.material }}</td>
                  <td>{{ item.combinacion }}</td>
                  <td>{{ item.cantidad }}</td>
                  <td>{{ item.duracion }}</td>
                  <td>{{ item.promedio }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td colspan="9"> No existen series registradas para dicha intervención.</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </div>
        <!-- /.row -->
      </div>

      {% if estadisticaFinal.observaciones is not empty%}
      <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <p class="lead">Observaciones</p>

          <div class="observaciones">
            <p class="text-justify">{{ estadisticaFinal.observaciones }}</p>
          </div>
        </div>
      </div>
      {% endif %}

      <div class="row">
        <!-- accepted payments column -->
        <div class="col-xs-12">
          <!-- <p class="lead">Payment Methods:</p> -->
          <p class="text-muted well well-sm no-shadow" style="margin-top: 10px; text-align: center">
            El reporte ha sido generado utilizando tecnología de PardSRL - Todos los derechos reservados
          </p>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- ./wrapper -->


</body>

</html>

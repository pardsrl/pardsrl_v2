{% extends 'base.html.twig' %}

{% set __title = 'Equipo' %}

{% block content %}
<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                          <th>Id</th>
                          <td>{{ equipo.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ equipo.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Modelo</th>
                            <td>{{ equipo.modelo }}</td>
                        </tr>
                        <tr>
                            <th>Tel</th>
                            <td>{{ equipo.tel }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ equipo.email }}</td>
                        </tr>
                        <tr>
                            <th>Compañía</th>
                            <td>{{ equipo.compania.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{% if equipo.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Creado</th>
                            <td>{% if equipo.fechaCreacion %}{{ equipo.fechaCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Actualizado</th>
                            <td>{% if equipo.fechaActualizacion %}{{ equipo.fechaActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="box-footer">
                    <a class="btn btn-primary" href="{{ path('equipo_edit', { 'id': equipo.id }) }}"> Editar</a>
                    <a class="btn btn-default" href="{{ path('equipo_index') }}"> Volver al Listado</a>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}

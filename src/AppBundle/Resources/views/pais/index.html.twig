{% extends 'base.html.twig' %}

{% set __title = 'Listado de países' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Descripcion</th>
                                <th>Codigopais</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for pai in pais %}
                            <tr>
                                <td><a href="{{ path('pais_show', { 'id': pai.id }) }}">{{ pai.id }}</a></td>
                                <td>{{ pai.descripcion }}</td>
                                <td>{{ pai.codigoPais }}</td>                                <td>
                                    <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('pais_edit', { 'id': pai.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a title="Eliminar" class="btn btn-default btn-sm delete-obj" data-id="{{ pai.id }}" data-href="{{ path('pais_delete', { 'id': pai.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(pais) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-primary" href="{{ path('pais_new') }}">Nuevo país</a>

{% endblock %}


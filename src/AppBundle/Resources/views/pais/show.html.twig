{% extends 'base.html.twig' %}

{% set __title = 'País' %}

{% block content %}
<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ pai.id }}</td>
                        </tr>
                        <tr>
                            <th>Descripcion</th>
                            <td>{{ pai.descripcion }}</td>
                        </tr>
                        <tr>
                            <th>Codigo de país</th>
                            <td>{{ pai.codigoPais }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="box-footer">
                    <a class="btn btn-primary" href="{{ path('pais_edit', { 'id': pai.id }) }}"> Editar</a>
                    <a class="btn btn-default" href="{{ path('pais_index') }}"> Volver al Listado</a>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}

<script type="text/javascript">
    $(document).ready(function () {

        var data = {{ data | raw }};

        var url = '{{ path('equipo_graficas_historicas', { 'id': equipo.id ,'fintervencion':'__fintervencion__' , 'fdesde': '__fdesde__' , 'fhasta': '__fhasta__' }) }}';

        $('#prom-varillas-hora').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: ' '
            },
            subtitle: {
                text: ' '
            },
            xAxis: {
                type: 'datetime',
                dateTimeLabelFormats: {
                    day: '%b - %Y'
                },
                tickWidth: 1,
                labels: {
                    rotation: -90
                }
            },
            yAxis: {
                title: {
                    text: ' '
                }
            },
            legend: {
                enabled: false
            },
            credits: {
                enabled: false
            },
            plotOptions: {
                series: {
                    pointWidth: 5,
                    borderWidth: 0,
                    dataLabels: {
                        enabled: true,
                        format: '{point.y:.1f}'
                    }
                }
            },

            tooltip: {
                headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                pointFormat: '<span style="color:{point.color}">{point.desc}</span>: <b>{point.y:.2f}</b><br/>'
            },

            series: [{
                name: 'Promedio',
                colorByPoint: true,
                data: data,
                point: {
                    events: {
                        click: function (e) {

                            url = url
                            .replace(/__fintervencion__/g, e.point.fintervencion)
                            .replace(/__fdesde__/g, e.point.fdesde)
                            .replace(/__fhasta__/g, e.point.fhasta)

                            window.open(
                                url,
                                '_blank'
                            );

                        }
                    }
                }
            }]
        });

    });
</script>

<div class="col-md-6">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Promedios de varillas/hora</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="chart">
                <div id="prom-varillas-hora" style="width:100%; height:300px;"></div>
            </div>
        </div><!-- /.box-body -->
    </div>
</div><!-- /.col -->

{% extends 'base.html.twig' %}

{% set __title = 'Cambiar Password' %}

{% block content %}
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Usuario: {{ usuario.username }}</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <!-- form start -->
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="box-footer">
                        <input class="btn btn-primary" type="submit" value="Cambiar Password"/>
                        <a class="btn btn-default" href="{{ path('persona_index') }}"> Volver al Listado</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
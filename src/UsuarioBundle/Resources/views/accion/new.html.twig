{% extends 'base.html.twig' %}


{% set __title = 'Nueva Acci√≥n' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function(){
            $('.select2').select2();
        });
    </script>
{% endblock %}

{% block content %}
    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <!-- form start -->
                    {{ form_start(form) }}
                    {{ form_row(form.nombre) }}
                    {{ form_row(form.descripcion) }}
                    {{ form_row(form.ruta, { 'attr': {'class': 'select2'} }) }}
                    {{ form_row(form.activo) }}
                    <div class="box-footer">
                        <input class="btn btn-primary" type="submit" value="Crear"/>
                        <a class="btn btn-default" href="{{ path('accion_index') }}"> Volver al Listado</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% set __title = 'Listado de acciones' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Ruta</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for accion in accions %}
                            <tr>
                                <td><a href="{{ path('accion_show', { 'id': accion.id }) }}">{{ accion.id }}</a></td>
                                <td>{{ accion.nombre }}</td>
                                <td>{{ accion.descripcion }}</td>
                                <td>{{ accion.ruta }}</td>
                                <td>{% if accion.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>                                <td>
                                    <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('accion_edit', { 'id': accion.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a title="Eliminar" class="btn btn-default btn-sm delete-obj" data-id="{{ accion.id }}" data-href="{{ path('accion_delete', { 'id': accion.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(accions) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-primary" href="{{ path('accion_new') }}">Nueva acci√≥n</a>

{% endblock %}

